                                                                            <div
                                                                                class="dropdown-menu dropdown-content-custom">
                                                                                <a @click.prevent="groupSearchData({id: group._id, name: group.name})"
                                                                                    v-for="(group, index) in groupFilter"
                                                                                    :key="index"
                                                                                    class="dropdown-item text-capitalize"
                                                                                    href="">{{group.name}}</a>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-12">
                                                                        <h6 class="mt-2 mb-2">SubGroup Name</h6>
                                                                        <div class="form-group">
                                                                            <input type="text" v-model="name" class="form-control" placeholder="SubGroup Name">
