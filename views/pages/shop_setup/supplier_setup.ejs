            <script>
                var pageNo = 1

                new Vue({
                    el: '#property_type_section',
                    data: {
                        categoryCheckbox: false,
                        subcategoryCheckbox: false,
                        brandCheckbox: false,
                        supplierCheckbox: false,
                        allBrandCheckbox: false,
                        download_type: 'default',
                        selectedBranches: [],
                        allSupplier: [],
                        allBrand: [],
