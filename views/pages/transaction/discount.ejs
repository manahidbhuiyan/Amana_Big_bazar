                                    <tr>
                                        <th>#</th>
                                        <th>Discount No</th>
                                        <th>Start</th>
                                        <th>End</th>
                                        <th>Applied By</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody v-show="allSearchedData.length > 0">
                                    <tr v-for="(productDiscountInfo, index) in allSearchedData" :key="index">
                                        <td>{{index+1}}</td>
                                        <td>{{productDiscountInfo.serialNo}}</td>
                                        <td>{{productDiscountInfo.discount_start.split('T')[0]}}</td>
                                        <td>{{productDiscountInfo.discount_stop.split('T')[0]}}</td>
                                        <td>{{productDiscountInfo.admin.name}}</td>
