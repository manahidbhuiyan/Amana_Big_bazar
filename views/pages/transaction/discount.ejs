<div id="property_type_section">
    <div class="modal fade" id="applyAdvancedDiscount" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="title" id="defaultModalLabel">Apply Advanced Discount</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form @submit.prevent="applyAdvancedDiscountAmount()">
                        <div class="row">
                            <div class="col-sm-12">
                                <h6>Load product sequentially</h6>
                                <div class="form-group">
                                    <div class="radio inlineblock m-r-20">
                                        <input type="radio" id="sequence_of_product_1" v-model="sequence_of_product" value="true" class="with-gap"/> 
                                        <label for="sequence_of_product_1">Yes</label>
                                    </div>
                                    <div class="radio inlineblock">
                                        <input type="radio" id="sequence_of_product_0" v-model="sequence_of_product" value="false" class="with-gap"/> 
